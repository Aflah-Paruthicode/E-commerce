<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Banner | DashControl</title>
    <link rel="icon" type="image/x-icon" href="/logo/DashFootwares.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/adminCss/products.css" />
    <link rel="stylesheet" href="/css/adminCss/addBanner.css" />
  </head>
  <body>
    <header>
      <div class="d-flex align-items-center">
        <img src="/logo/DashFootwares.png" alt="" width="35" />
        <h3 class="ms-3 mb-0" style="font-size: 16px; font-weight: 800">DASH CONTROL</h3>
      </div>
      <div class="d-flex align-items-center gap-3">
        <span class="small fw-bold me-2">Aflah (Admin)</span>
        <form action="/admin/logout"><button type="submit" class="btn btn-sm btn-outline-danger fw-bold">LOGOUT</button></form>
      </div>
    </header>

    <aside class="sidebar">
      <a href="/admin/dashboard" class="nav-btn"> <i class="fa-solid fa-chart-line"></i><span>Dashboard</span> </a>
      <a href="/admin/customers" class="nav-btn"> <i class="fa-solid fa-users"></i><span>Customers</span> </a>
      <a href="/admin/product" class="nav-btn"> <i class="fa-solid fa-shoe-prints"></i><span>Products</span> </a>
      <a href="/admin/orders" class="nav-btn"> <i class="fa-solid fa-bag-shopping"></i><span>Orders</span> </a>
      <a href="/admin/category" class="nav-btn"> <i class="fa-solid fa-layer-group"></i><span>Categories</span> </a>
      <a href="/admin/couponManagement" class="nav-btn"> <i class="fa-solid fa-ticket"></i><span>Coupons</span> </a>
      <a href="/admin/banner" class="nav-btn active"> <i class="fa-solid fa-image"></i><span>Banners</span> </a>
      <a href="/admin/offerManagement" class="nav-btn"><i class="fa-solid fa-percent"></i><span>Offers</span></a>
      <a href="/admin/salesReport" class="nav-btn"> <i class="fa-solid fa-file-invoice-dollar"></i><span>Sales Report</span> </a>
    </aside>

    <main class="main-content">
      <div class="action-bar">
        <h4 class="fw-bold m-0 text-uppercase" style="letter-spacing: 1px">Add New Hero Banner</h4>
        <a href="/admin/banner" class="btn btn-sm btn-outline-secondary"> <i class="fa-solid fa-xmark me-2"></i>Cancel</a>
      </div>

      <div class="content-card p-4">
        <form action="/admin/addBannerToSlide" id="uploadForm" method="post" enctype="multipart/form-data">
          <div class="row g-4">
            <div class="col-lg-7">
              <div class="mb-4">
                <label class="form-label">Banner Description</label>
                <input type="text" class="form-control bg-light" value="Banner for home page slide" readonly />
              </div>

              <div class="mb-4">
                <label class="form-label">Redirect Target (URL)</label>
                <div class="input-group">
                  <span class="input-group-text bg-white"><i class="fa-solid fa-compass"></i></span>
                  <input type="text" name="url" class="form-control" placeholder="e.g. /viewProduct/?id=..." required />
                </div>
              </div>

              <div class="row g-3 mb-4">
                <div class="col-md-6">
                  <label class="form-label">Campaign Start Date</label>
                  <input type="date" class="form-control" name="startDate" value="<%= today.toISOString().split('T')[0] %>" required />
                </div>
                <div class="col-md-6">
                  <label class="form-label">Campaign End Date</label>
                  <input type="date" class="form-control" name="endDate" required />
                </div>
              </div>

              <div class="mb-0">
                <label class="form-label">Select Banner Image</label>
                <input type="file" id="productImages" name="image" class="form-control" accept=".jpg, .jpeg, .png" required />
              </div>
            </div>

            <div class="col-lg-5">
              <label class="form-label">Visual Preview (1429 x 781)</label>
              <div class="banner-placeholder" id="previewContainer">
                <i class="fa-regular fa-image fa-3x mb-2 opacity-50"></i>
                <span class="small opacity-50">No Image Selected</span>
                <img src="" id="previewImg" alt="New Banner Preview" />
              </div>
              <div class="dimension-info text-center mt-2"><i class="fa-solid fa-maximize me-1"></i> EXACT RATIO REQUIRED</div>

              <div class="mt-4">
                <button type="submit" class="btn-create shadow">PUBLISH BANNER</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </main>

    <script>
      const fileInput = document.getElementById("productImages");
      const previewImg = document.getElementById("previewImg");
      const previewContainer = document.getElementById("previewContainer");

      fileInput.addEventListener("change", function () {
        const file = this.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = (e) => {
            previewImg.src = e.target.result;
            previewImg.style.display = "block";
            Array.from(previewContainer.children).forEach((child) => {
              if (child !== previewImg) child.style.display = "none";
            });
          };
          reader.readAsDataURL(file);
        }
      });

      document.getElementById("uploadForm").addEventListener("submit", function (event) {
        event.preventDefault();
        const file = fileInput.files[0];

        if (!file) {
          Swal.fire({ title: "Missing Image", text: "Please select a banner image.", icon: "warning" });
          return;
        }

        const img = new Image();
        img.src = URL.createObjectURL(file);

        img.onload = function () {
          if (img.width === 1429 && img.height === 781) {
            document.getElementById("uploadForm").submit();
          } else {
            Swal.fire({
              title: "Invalid Image Size",
              html: `Selected: <b>${img.width}x${img.height}</b>px<br>Required: <b>1429x781</b>px`,
              icon: "error",
              confirmButtonColor: "#1e293b",
            });
          }
          URL.revokeObjectURL(img.src);
        };
      });
    </script>
  </body>
</html>
