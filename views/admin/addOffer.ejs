      <div class="ad-home-dashboard-optionsDetailPage">
          <h3>ADD OFFER PAGE</h3>

          <% if (typeof emessage !== 'undefined') { %>
            <script>
                Swal.fire({
                    title: 'Failed!',
                    text: '<%= emessage %>',
                    icon: 'error',
                    confirmButtonText: 'OK'
                })
            </script>
        <% } %>
          
          
  
          <div class="adProduct-formDiv">
            <form action="" method="post">

                <div class="pName in">

                   <%  if(typeof products !== 'undefined' ) {  %>

                    
                    <label for="">Product :</label>
                    <select name="product_Id" id="">
                        <option value="">choose one...</option>

                        <% products.forEach((product) => { %>

                          <% if(product.product_OfferDetails) {  %>

                            <option style="color: white;background-color: black;" disabled  value="<%= product._id %>"><%= product.name %></option>

                            <hr style="background-color: #fff;height: 4px;">
                            <%} else { %>

                            <option value="<%= product._id %>"><%= product.name %></option>
                              <% } %>



                      <%   }) %>
                    </select>
                   <%  } else { %>

                    <label for="">Category :</label>
                    <select name="category_name" id="">
                        <option value="">choose one...</option>

                        <% categories.forEach((category) => { %>

                          <option value="<%= category.category %>"><%= category.category %></option>
                          
                      <%   }) %>
                    </select>

              <%  } %>
                  </div>


            <div class="pName in">
              <label for="">Offer name :</label>
              <input type="text" name="offerName" >
            </div>

              
              

            

            <div class="pDescription in">
              <label for="">Discount Percentage :</label>
              <input type="number" name="DiscountPercentage" >

            </div>

            <div class="pPrice in">
              <label for="">Offer Start Date :</label>
              <input style="width: 30%;" type="date" name="offerStartDate" >

              <label style="margin: 30px;margin-left: 55px;" for=""> Offer End Date :</label>
              <input style="width: 30%;" id="date" type="date" required  name="offerEndDate">
            </div>

            
            
            <div class="in">

            <input style="    margin-top: 25px;
            margin-left: 170px;background-color: green;outline: none;border: none;color: #fff;width: 210px;font-size: 16px;font-weight: 600;border-radius: 10px;" type="submit" value="Add A New Offer">
          </div>

                  </form>
                  <p id="error" style="color: red;"></p>

            

          </div>
      </div>
