<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Offer | DashControl</title>
    <link rel="icon" type="image/x-icon" href="/logo/DashFootwares.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/adminCss/products.css" />
    <link rel="stylesheet" href="/css/adminCss/addOffer.css" />
  </head>
  <body>
    <header>
      <div class="d-flex align-items-center">
        <img src="/logo/DashFootwares.png" alt="" width="35" />
        <h3 class="ms-3 mb-0" style="font-size: 16px; font-weight: 800">DASH CONTROL</h3>
      </div>
      <div class="d-flex align-items-center gap-3">
        <span class="small fw-bold me-2">Aflah (Admin)</span>
        <form action="/admin/logout"><button type="submit" class="btn btn-sm btn-outline-danger fw-bold">LOGOUT</button></form>
      </div>
    </header>

    <aside class="sidebar">
      <a href="/admin/dashboard" class="nav-btn"> <i class="fa-solid fa-chart-line"></i><span>Dashboard</span> </a>
      <a href="/admin/customers" class="nav-btn"> <i class="fa-solid fa-users"></i><span>Customers</span> </a>
      <a href="/admin/product" class="nav-btn"> <i class="fa-solid fa-shoe-prints"></i><span>Products</span> </a>
      <a href="/admin/orders" class="nav-btn"> <i class="fa-solid fa-bag-shopping"></i><span>Orders</span> </a>
      <a href="/admin/category" class="nav-btn"> <i class="fa-solid fa-layer-group"></i><span>Categories</span> </a>
      <a href="/admin/couponManagement" class="nav-btn"> <i class="fa-solid fa-ticket"></i><span>Coupons</span> </a>
      <a href="/admin/banner" class="nav-btn"> <i class="fa-solid fa-image"></i><span>Banners</span> </a>
      <a href="/admin/offerManagement" class="nav-btn active"><i class="fa-solid fa-percent"></i><span>Offers</span></a>
      <a href="/admin/salesReport" class="nav-btn"> <i class="fa-solid fa-file-invoice-dollar"></i><span>Sales Report</span> </a>
    </aside>

    <main class="main-content">
      <div class="action-bar">
        <h4 class="fw-bold m-0">
          <% if(typeof products !== 'undefined') { %> <i class="fa-solid fa-box-open me-2"></i>Product Offer <% } else { %>
          <i class="fa-solid fa-tags me-2"></i>Category Offer <% } %>
        </h4>
        <a href="/admin/offerManagement" class="btn btn-sm btn-outline-secondary"> <i class="fa-solid fa-arrow-left me-2"></i>Back to Offers</a>
      </div>

      <% if (locals.emessage) { %>
      <script>
        Swal.fire({ title: "Failed!", text: "<%= emessage %>", icon: "error" });
      </script>
      <% } %>

      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="content-card offer-card p-5 shadow-sm">
            <form action="" method="post">
              <div class="mb-4">
                <% if(typeof products !== 'undefined' ) { %>
                <span class="target-type-badge bg-primary text-white">TARGET: INDIVIDUAL PRODUCT</span>
                <label class="form-label d-block">Select Product</label>
                <select name="product_Id" class="form-select form-select-lg border-2" required>
                  <option value="">-- Choose a product --</option>
                  <% products.forEach((product) => { %> <% if(product.product_OfferDetails) { %>
                  <option disabled class="text-muted" value="<%= product._id %>"><%= product.name %> (Active Offer Exists)</option>
                  <%} else { %>
                  <option value="<%= product._id %>"><%= product.name %></option>
                  <% } %> <% }) %>
                </select>
                <% } else { %>
                <span class="target-type-badge bg-info text-dark">TARGET: ENTIRE CATEGORY</span>
                <label class="form-label d-block">Select Category</label>
                <select name="category_name" class="form-select form-select-lg border-2" required>
                  <option value="">-- Choose a category --</option>
                  <% categories.forEach((category) => { %>
                  <option value="<%= category.category %>"><%= category.category %></option>
                  <% }) %>
                </select>
                <% } %>
              </div>

              <div class="row g-4">
                <div class="col-md-7">
                  <label class="form-label">Campaign Name</label>
                  <input type="text" name="offerName" class="form-control border-2" placeholder="e.g. Summer Sale 2024" required />
                </div>

                <div class="col-md-5">
                  <label class="form-label">Discount Percentage</label>
                  <div class="discount-input-group">
                    <input type="number" name="DiscountPercentage" class="form-control border-2" placeholder="0" min="1" max="99" required />
                    <i class="fa-solid fa-percent"></i>
                  </div>
                </div>

                <div class="col-md-6">
                  <label class="form-label">Offer Start Date</label>
                  <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fa-solid fa-calendar-play text-success"></i></span>
                    <input type="date" name="offerStartDate" class="form-control" required />
                  </div>
                </div>

                <div class="col-md-6">
                  <label class="form-label">Offer End Date</label>
                  <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fa-solid fa-calendar-check text-danger"></i></span>
                    <input type="date" id="date" name="offerEndDate" class="form-control" required />
                  </div>
                </div>

                <div class="col-12 mt-5">
                  <button type="submit" class="btn-submit"><i class="fa-solid fa-plus-circle me-2"></i> CREATE OFFER CAMPAIGN</button>
                  <p id="error" class="text-danger small mt-2 fw-bold"></p>
                </div>
              </div>
            </form>
          </div>

          <div class="text-center mt-4">
            <p class="text-muted small">
              <i class="fa-solid fa-shield-halved me-1"></i>
              Creating a new offer will automatically update the listing price for the selected target.
            </p>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
