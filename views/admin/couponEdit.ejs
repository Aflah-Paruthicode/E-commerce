          <% if (typeof emessage !== 'undefined') { %>
            <script>
                Swal.fire({
                    title: 'Failed!',
                    text: '<%= emessage %>',
                    icon: 'error',
                    confirmButtonText: 'OK'
                })
            </script>
        <% } %>
          
          
  
          <div class="adProduct-formDiv">
            <form action="/admin/updateCoupon" method="post">
            <div class="pName in">
              <label for="">Code :</label>
              <input type="text" name="code" value="<%= coupon.code %>" >
            </div>

              
              

            

            <div class="pDescription in">
              <label for="">Discount :</label>
              <input type="number" name="discount" value="<%= coupon.discount %>" >

            </div>

            <div class="pPrice in">
              <label for="">Purchase Ammount :</label>
              <input style="width: 30%;" type="number" name="amount" value="<%= coupon.amount %>">
              <input type="hidden"  name="id" value="<%= coupon._id %>">

              <label style="margin: 30px;margin-left: 55px;" for=""> Expiry :</label>
              <input style="width: 30%;" id="date" type="date" required  name="expiry" value="<%= coupon.expiry.toLocaleDateString() %>">
            </div>

            
            
            <div class="in">

            <input style="    margin-top: 25px;
            margin-left: 170px;background-color: green;outline: none;border: none;color: #fff;width: 190px;font-size: 16px;font-weight: 600;border-radius: 10px;" type="submit" value="EDIT COUPON">
          </div>

                  </form>
