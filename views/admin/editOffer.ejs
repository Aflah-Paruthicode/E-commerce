      <div class="ad-home-dashboard-optionsDetailPage">
          <h3>EDIT OFFER PAGE</h3>

          <% if (typeof emessage !== 'undefined') { %>
            <script>
                Swal.fire({
                    title: 'Failed!',
                    text: '<%= emessage %>',
                    icon: 'error',
                    confirmButtonText: 'OK'
                })
            </script>
        <% } %>
          
          
  
          <div class="adProduct-formDiv">
            <form action="" method="post">

                <div class="pName in">

                   <%  if(typeof product !== 'undefined' ) {  %>
                    
                    <label for="">Product :</label>
                    <select name="product_Id" id="">
                        <option value="<%= product.name %>"><%= product.name %></option>

                    </select>
                   <%  } else { %>

                    <label for="">Category :</label>
                    <select name="category_name" id="">

                            <option value="<%= categoryOfferedProduct.category %>"><%= categoryOfferedProduct.category %></option>

                    </select>

              <%  } %>
                  </div>


            <div class="pName in">
              <label for="">Offer name :</label>
              <%  if(typeof product !== 'undefined' ) {  %>

              <input type="text" name="offerName" value="<%= product.product_OfferDetails.offerName %>" >
              <input type="hidden" name="id" value="<%= product._id %>">
                <% } else {  %>
                <input type="text" name="offerName" value="<%= categoryOfferedProduct.category_OfferDetails.offerName %>">

               <% } %>
            </div>

              
              

            

            <div class="pDescription in">
              <label for="">Discount Percentage :</label>

              <%  if(typeof product !== 'undefined' ) {  %>

              <input type="number" name="DiscountPercentage" value="<%= product.product_OfferDetails.discountPercentage %>" >

              <% } else {  %>

                <input type="number" name="DiscountPercentage" value="<%= categoryOfferedProduct.category_OfferDetails.discountPercentage %>" >


                <% } %>

            </div>
            
            <div class="pPrice in">
              <label for="">Offer Start Date :</label>
              <%  if(typeof product !== 'undefined' ) {  %>
                 
                    <input style="width: 30%;" type="date" name="offerStartDate" value="<%= product.product_OfferDetails.offerStartDate.getFullYear() %>-<%= (product.product_OfferDetails.offerStartDate.getMonth() + 1).toString().padStart(2, '0') %>-<%= product.product_OfferDetails.offerStartDate.getDate().toString().padStart(2, '0') %>" >
                   

                    <label style="margin: 30px;margin-left: 55px;" for=""> Offer End Date :</label>
                    <input style="width: 30%;" id="date" type="date" required  name="offerEndDate" value="<%= product.product_OfferDetails.offerEndDate.getFullYear() %>-<%= (product.product_OfferDetails.offerEndDate.getMonth() + 1).toString().padStart(2, '0') %>-<%= product.product_OfferDetails.offerEndDate.getDate().toString().padStart(2, '0') %>" >
                 
                    <% } else { %>

                    <input style="width: 30%;" type="date" name="offerStartDate" value="<%= categoryOfferedProduct.category_OfferDetails.offerStartDate.getFullYear() %>-<%= (categoryOfferedProduct.category_OfferDetails.offerStartDate.getMonth() + 1).toString().padStart(2, '0') %>-<%= categoryOfferedProduct.category_OfferDetails.offerStartDate.getDate().toString().padStart(2, '0') %>" >

                    <label style="margin: 30px;margin-left: 55px;" for=""> Offer End Date :</label>
                    <input style="width: 30%;" id="date" type="date" required  name="offerEndDate" value="<%= categoryOfferedProduct.category_OfferDetails.offerEndDate.getFullYear() %>-<%= (categoryOfferedProduct.category_OfferDetails.offerEndDate.getMonth() + 1).toString().padStart(2, '0') %>-<%= categoryOfferedProduct.category_OfferDetails.offerEndDate.getDate().toString().padStart(2, '0') %>" >
                 
                <% } %>

          </div>

            
            
            <div class="in">

            <input style="    margin-top: 25px;
            margin-left: 170px;background-color: green;outline: none;border: none;color: #fff;width: 210px;font-size: 16px;font-weight: 600;border-radius: 10px;" type="submit" value="Submit changes">
          </div>

                  </form>
                  <p id="error" style="color: red;"></p>

            

