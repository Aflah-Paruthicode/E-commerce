<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Banners | DashFootwares Control</title>
    <link rel="icon" type="image/x-icon" href="/logo/DashFootwares.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/adminCss/banners.css" />
  </head>
  <body>
    <header>
      <div class="d-flex align-items-center">
        <img src="/logo/DashFootwares.png" alt="" width="35" />
        <h3 class="ms-3 mb-0" style="font-size: 16px; font-weight: 800">DASH CONTROL</h3>
      </div>
      <div class="d-flex align-items-center gap-3">
        <span class="small fw-bold">Aflah (Admin)</span>
        <form action="/admin/logout">
          <button type="submit" class="btn btn-sm btn-outline-danger fw-bold">LOGOUT</button>
        </form>
      </div>
    </header>

    <aside class="sidebar">
      <a href="/admin/dashboard" class="nav-btn"> <i class="fa-solid fa-chart-line"></i><span>Dashboard</span> </a>
      <a href="/admin/customers" class="nav-btn"> <i class="fa-solid fa-users"></i><span>Customers</span> </a>
      <a href="/admin/product" class="nav-btn"> <i class="fa-solid fa-shoe-prints"></i><span>Products</span> </a>
      <a href="/admin/orders" class="nav-btn"> <i class="fa-solid fa-bag-shopping"></i><span>Orders</span> </a>
      <a href="/admin/category" class="nav-btn"> <i class="fa-solid fa-layer-group"></i><span>Categories</span> </a>
      <a href="/admin/couponManagement" class="nav-btn"> <i class="fa-solid fa-ticket"></i><span>Coupons</span> </a>
      <a href="/admin/banner" class="nav-btn active"><i class="fa-solid fa-image"></i><span>Banners</span> </a>
      <a href="/admin/offerManagement" class="nav-btn"><i class="fa-solid fa-percent"></i><span>Offer Management</span></a>
      <a href="/admin/salesReport" class="nav-btn"> <i class="fa-solid fa-file-invoice-dollar"></i><span>Sales Report</span> </a>
    </aside>

    <main class="main-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h4 class="fw-bold m-0">Promotional Banners</h4>
          <span class="dimension-hint mt-2"><i class="fa-solid fa-circle-info me-1"></i> Required: 1429 Ã— 781 px</span>
        </div>
        <a href="/admin/loadAddBannerToSlide" class="btn-add-banner"> <i class="fa-solid fa-plus me-2"></i> Add New Slide </a>
      </div>

      <div class="card-custom">
        <table class="table mb-0 align-middle">
          <thead>
            <tr>
              <th style="width: 20%">Preview</th>
              <th>Description</th>
              <th>Schedule</th>
              <th>Time Left</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% slideBanners.forEach((banner,index) => { %> <% const d1 = new Date(banner.startDate); const d2 = new Date(banner.endDate); const diff = d2 - new
            Date(); const dayDifference = Math.ceil(diff / (1000 * 3600 * 24)); %>
            <tr>
              <td>
                <% if (banner.image) { %>
                <img src="/banners/<%= banner.image %>" class="banner-preview" alt="Banner" />
                <% } else { %>
                <div class="banner-preview d-flex align-items-center justify-content-center text-muted">No Image</div>
                <% } %>
              </td>
              <td>
                <div class="fw-bold"><%= banner.description %></div>
                <small class="text-muted">Slide Position: <%= index + 1 %></small>
              </td>
              <td>
                <div class="small fw-semibold text-dark"><i class="fa-regular fa-calendar-check me-1"></i> <%= banner.startDate.toLocaleDateString() %></div>
                <div class="small text-muted"><i class="fa-regular fa-calendar-xmark me-1"></i> <%= banner.endDate.toLocaleDateString() %></div>
              </td>
              <td>
                <% if(dayDifference > 0) { %>
                <span class="status-countdown"><%= dayDifference %> Days Left</span>
                <% } else { %>
                <span class="status-countdown status-expired text-danger">Expired</span>
                <% } %>
              </td>
              <td class="text-end action-btns">
                <a class="btn btn-outline-dark me-1" href="/admin/loadUpdateBanner/?bannerId=<%= banner._id %>"> <i class="fa-solid fa-pen"></i> Update </a>
                <button class="btn btn-outline-danger" onclick="confirmDelete('<%= banner._id %>')">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>

    <script>
      function confirmDelete(id) {
        Swal.fire({
          title: "Remove Banner?",
          text: "This slide will no longer appear on the home screen.",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#dc2626",
          confirmButtonText: "Yes, delete it",
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = "/admin/deleteBanner/" + id;
          }
        });
      }
    </script>
  </body>
</html>
