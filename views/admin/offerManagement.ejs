<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Offers | DashFootwares Control</title>
    <link rel="icon" type="image/x-icon" href="/logo/DashFootwares.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="/css/adminCss/offerManagement.css" />
  </head>
  <body>
    <header>
      <div class="d-flex align-items-center">
        <img src="/logo/DashFootwares.png" alt="" width="35" />
        <h3 class="ms-3 mb-0" style="font-size: 16px; font-weight: 800">DASH CONTROL</h3>
      </div>
      <div class="d-flex align-items-center gap-3">
        <span class="small fw-bold me-2">Aflah</span>
        <form action="/admin/logout">
          <button type="submit" class="btn btn-sm btn-outline-danger fw-bold">LOGOUT</button>
        </form>
      </div>
    </header>

    <aside class="sidebar">
      <a href="/admin/dashboard" class="nav-btn"> <i class="fa-solid fa-chart-line"></i><span>Dashboard</span> </a>
      <a href="/admin/customers" class="nav-btn"> <i class="fa-solid fa-users"></i><span>Customers</span> </a>
      <a href="/admin/product" class="nav-btn"> <i class="fa-solid fa-shoe-prints"></i><span>Products</span> </a>
      <a href="/admin/orders" class="nav-btn"> <i class="fa-solid fa-bag-shopping"></i><span>Orders</span> </a>
      <a href="/admin/category" class="nav-btn"> <i class="fa-solid fa-layer-group"></i><span>Categories</span> </a>
      <a href="/admin/couponManagement" class="nav-btn"> <i class="fa-solid fa-ticket"></i><span>Coupons</span> </a>
      <a href="/admin/banner" class="nav-btn"> <i class="fa-solid fa-image"></i><span>Banners</span> </a>
      <a href="/admin/offerManagement" class="nav-btn active"><i class="fa-solid fa-percent"></i><span>Offer Management</span></a>
      <a href="/admin/salesReport" class="nav-btn"> <i class="fa-solid fa-file-invoice-dollar"></i><span>Sales Report</span> </a>
    </aside>

    <main class="main-content">
      <div class="d-flex justify-content-between align-items-end mb-4">
        <h4 class="fw-bold m-0">Incentive Programs</h4>
        <div class="d-flex gap-2">
          <a class="btn btn-outline-dark fw-bold btn-sm p-2" href="/admin/addCategoryOffer">
            <i class="fa-solid fa-layer-group me-1"></i> New Category Offer
          </a>
          <a class="btn btn-dark fw-bold btn-sm p-2" href="/admin/addProductOffer"> <i class="fa-solid fa-tag me-1"></i> New Product Offer </a>
        </div>
      </div>

      <% let today = new Date(); today.setHours(0, 0, 0, 0); %>

      <div class="offer-card">
        <div class="section-title">
          <h5><i class="fa-solid fa-box-open me-2 text-primary"></i> Product Specific Offers</h5>
        </div>
        <table class="table mb-0">
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Offer Title</th>
              <th>Discount</th>
              <th>Validity</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% productOffers.forEach((product) => { %> <% product.product_OfferDetails.offerStartDate.setHours(0,0,0,0); const isActive =
            (product.product_OfferDetails.offerStartDate <= today && product.product_OfferDetails.offerEndDate >= today); %>
            <tr>
              <td class="fw-semibold"><%= product.name.length > 25 ? product.name.slice(0, 25) + '...' : product.name %></td>
              <td><small class="text-muted"><%= product.product_OfferDetails.offerName %></small></td>
              <td><span class="discount-badge"><%= product.product_OfferDetails.discountPercentage %>% OFF</span></td>
              <td>
                <div class="small fw-bold"><%= product.product_OfferDetails.offerStartDate.toLocaleDateString() %></div>
                <div class="text-muted small">to <%= product.product_OfferDetails.offerEndDate.toLocaleDateString() %></div>
              </td>
              <td>
                <span class="status-pill <%= isActive ? 'status-active' : 'status-inactive' %>"> <%= isActive ? 'Active' : 'Expired' %> </span>
              </td>
              <td class="text-end action-group">
                <a href="/admin/editProductOffer/?id=<%= product._id %>" class="btn btn-outline-success"><i class="fa-solid fa-edit"></i></a>
                <a href="/admin/deleteProductOffer/<%= product._id %>" class="btn btn-outline-danger" onclick="return confirm('Remove this offer?')"
                  ><i class="fa-solid fa-trash"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="offer-card">
        <div class="section-title">
          <h5><i class="fa-solid fa-folder-tree me-2 text-primary"></i> Category Wide Offers</h5>
        </div>
        <table class="table mb-0">
          <thead>
            <tr>
              <th>Category</th>
              <th>Offer Title</th>
              <th>Discount</th>
              <th>Validity</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% categoryOffers.forEach((cat) => { %> <% cat.offer.offerStartDate.setHours(0,0,0,0); const isActive = (cat.offer.offerStartDate <= today &&
            cat.offer.offerEndDate >= today); %>
            <tr>
              <td class="fw-bold"><%= cat._id %></td>
              <td><small class="text-muted"><%= cat.offer.offerName %></small></td>
              <td><span class="discount-badge" style="background: #fff7ed; color: #ea580c"><%= cat.offer.discountPercentage %>% OFF</span></td>
              <td>
                <div class="small fw-bold"><%= cat.offer.offerStartDate.toLocaleDateString() %></div>
                <div class="text-muted small">to <%= cat.offer.offerEndDate.toLocaleDateString() %></div>
              </td>
              <td>
                <span class="status-pill <%= isActive ? 'status-active' : 'status-inactive' %>"> <%= isActive ? 'Active' : 'Expired' %> </span>
              </td>
              <td class="text-end action-group">
                <a href="/admin/editCategoryOffer/?id=<%= cat._id %>" class="btn btn-outline-success"><i class="fa-solid fa-edit"></i></a>
                <a href="/admin/deleteCategoryOffer/<%= cat._id %>" class="btn btn-outline-danger" onclick="return confirm('Remove this offer?')"
                  ><i class="fa-solid fa-trash"></i
                ></a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </body>
</html>
