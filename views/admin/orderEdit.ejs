      <div class="ad-home-dashboard-optionsDetailPage">
          <h3> EDIT ORDER DETIALS</h3>

          <% if(typeof emessage !=='undefined' ) { %>
                
            <h2 style="font-weight: 500;font-size: 14px;color: rgb(192, 20, 20);
            ">
                <%= emessage %>
            </h2>
            <% } %>
          
  
          <div class="adProduct-formDiv">
            <form action="/admin/editOrder/?order_id=<%= order._id %>" method="post">
            <div class="pName in">
              <label for="">Customer Name :</label>
              <input type="text" name="" readonly value="<%= user.name %>">
            </div>

              
              <div class="pName in">
                <label for="">Shipping Address :</label>
                <input type="text" name="" value="<%= user.address %>" readonly>
              </div>

            <div class="pCategory in">
              <label for="">Status :</label>

              
              <select name="status">
                <option value="<%= order.status %>"><%= order.status %></option>
                <option value="Order Placed">Order Placed</option>
                <option value="Packed">Packed</option>
                <option value="Shipped">Shipped</option>
                <option value="Delivered">Delivered</option>
                <% if (order.status !== 'Delivered') { %>


                  <option value="Cancelled">Cancelled</option>

               <% } %>

                  
                
              </select>

            </div>

            <div class="pPrice in">
                <label for="">Delivery Charge :</label>
                <input style="width: 30%;" type="number" name="" readonly value="<%= order.deliveryChaerge %>">
  
                <label style="margin: 30px;margin-left: 55px;" for="">Delivery Date :</label>
                <input style="width: 30%;" name="" readonly value="<%= order.date %>">
              </div>

            <div class="pPrice in">
              <label for="">Totel Ammount :</label>
              <input style="width: 30%;" type="number" name="" value="<%= order.totelAmmount %>" readonly>

              <label style="margin: 30px;margin-left: 55px;" for="">Discount :</label>
              <input style="width: 30%;"  name="" value="10%" readonly>
            </div>

              <div class="pName in">
                <label for="">Item :</label>
                <input type="text" name="" value="<%= product.name %>" readonly>
              </div>
              
              <div class="pName in">
                <label for="">Quantity :</label>
                <input type="text" name="" value="<%= order.quantity %>" readonly>
              </div>


            <div class="pPrice in">
                <label for="">Payment Method :</label>
                <input style="width: 30%;"  name="" value="<%= order.paymentMethod %>" readonly>
  
                <label style="margin: 30px;margin-left: 55px;" for="">Mobile :</label>
                <input style="width: 30%;" type="number" name="" value="<%= user.mobile %>" readonly>
              </div>
            

            <div class="in">

            <input style="margin-top: 7px;background-color: green;outline: none;border: none;color: #fff;width: 190px;font-size: 16px;font-weight: 600;border-radius: 10px;" type="submit" value="CHANGE STATUS">
          </div>

                  </form>
            
            

          </div>
