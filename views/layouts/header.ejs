<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DashFootwares | Premium Collection</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>  
    <link rel="stylesheet" href="/css/userCss/header.css"> 

  </head>
  <body class="bg-white">
    <header class="premium-nav">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <div class="flex-shrink-0 flex items-center">
            <a href="/" class="flex items-center gap-2 decoration-0">
              <img class="h-9 w-auto" src="/logo/DashFootwares.png" alt="DashFootwares" />
              <span class="text-lg font-extrabold tracking-tighter text-black uppercase">DashFootwares</span>
            </a>
          </div>

          <nav class="hidden md:flex space-x-10">
            <a href="/" class="nav-link">HOME</a>
            <a href="/aboutUs" class="nav-link">ABOUT</a>
            <a href="/contactUs" class="nav-link">CONTACT</a>
          </nav>

          <div class="flex items-center gap-6">
            <div class="search-pill hidden lg:flex">
              <i class="fa-solid fa-magnifying-glass text-gray-400 text-xs"></i>
              <input type="text" id="searchInputField" placeholder="Search..." />
            </div>

            <div class="flex items-center gap-5">
              <a href="/whishlist" class="text-black hover:opacity-50 transition relative">
                <i class="fa-regular fa-heart text-xl"></i>
              </a>

              <a href="/cart" class="text-black hover:opacity-50 transition relative">
                <i class="fa-solid fa-bag-shopping text-xl"></i>
                <span class="badge-dot">000</span>
              </a>

              <a href="/profile" class="text-black hover:opacity-50 transition">
                <i class="fa-regular fa-circle-user text-xl"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchInputField");
        if (searchInput) {
          searchInput.addEventListener("focus", function () {
            if (window.location.pathname !== "/viewAllBestProducts") {
              window.location.href = "/viewAllBestProducts";
            }
          });
        }
      });
    </script>
  </body>
</html>
