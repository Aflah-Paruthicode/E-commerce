<h3 style="    margin: 35px 0px;
">Add A New Address</h3>
<div class="addresses" style="    width: 60%; padding: 40px;
">

            <form action="" method="post">
                <select id="country" name="country" class="form-select">
                    <% if(typeof details !== 'undefined') { %>
                        
                        <option value="<%= details.country %>"><%= details.country %></option>
                        <option value="">Select Country</option>
                  <%  } else { %>
                    <option value="">Select Country</option>
                    <option value="india">india</option>
                 <% }  %>
                    
                    <!-- Add options for countries -->
                </select>
                <select id="state" name="state" class="form-select">

                    <% if(typeof details !== 'undefined') { %>
                        
                        <option value="<%= details.state %>"><%= details.state %></option>
                        <option value="">Select Country</option>
                  <%  } else { %>
                    <option value="choose one..">Select State</option>
                    <option value="kerala">kerala</option>
                 <% }  %>
                    
                    <!-- Options will be dynamically populated based on the selected country -->
                </select>
                
                <select id="district" name="district" class="form-select">
                    <% if(typeof details !== 'undefined') { %>
                        
                        <option value="<%= details.district %>"><%= details.district %></option>
                        <option value="">Select Country</option>
                  <%  } else { %>
                    <option value="choose one..">Select District</option>
                    <option value="malappuram">malappuram</option>
                 <% }  %>
                    
                    <!-- Options will be dynamically populated based on the selected state -->
                </select>
                <br>
                <label for="">city</label>
                <% if(typeof details !== 'undefined') { %>
                    <input type="text" name="city" id="" value="<%= details.city %>" class="form-control">

               <% } else { %>
                <input type="text" name="city" id="" class="form-control">

                <% } %>
                <label for="">street</label>
                <% if(typeof details !== 'undefined') { %>
                    <input type="text" name="street" id="" value="<%= details.street %>" class="form-control">

               <% } else { %>
                <input type="text" name="street" id="" class="form-control">

                <% } %>
                <label for="">houseNo</label>
                <% if(typeof details !== 'undefined') { %>
                    <input type="text" name="houseNo" id="" value="<%= details.houseNo %>" class="form-control">

               <% } else { %>
                <input type="text" name="houseNo" id="" class="form-control">

                <% } %>
                <label for="">pincode</label>
                <% if(typeof details !== 'undefined') { %>
                    <input type="number" name="pincode" id="" value="<%= details.pincode %>" class="form-control">

               <% } else { %>
                <input type="number" name="pincode" id="" class="form-control">

                <% } %>
                <br><br>
                <input type="submit" class="btn btn-success" value="submit Address">



            </form>


            
            
