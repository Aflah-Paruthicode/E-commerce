<body>


<!-- user profile starts here -->




<div class="profile-main">
    <div class="profile-sections">
        <div class="hello-name"><img width="50px" src="/userProfileImages/user (1).png" alt=""> <h2><%= user.name %></h2> </div>
        <div class="profile-section-options">
            <a href="/profile">
            <div class="overview profile-section-option"><img src="/userProfileImages/user (1).png" alt=""> <h3>Account Overview</h3></div>
        </a><a href="/myOrders">
            <div class="my-orders profile-section-option"><img src="/userProfileImages/package.png" alt=""> <h3>My Orders</h3></div>
        </a><a href="/manageAddress">
            <div class="manage-address profile-section-option"><img src="/userProfileImages/location.png" alt=""> <h3>Manage Addressess</h3></div>
        </a><a href="/whishlist">
            <div class="my-wishlist profile-section-option"><img src="/userProfileImages/wishlist.png" alt=""> <h3>My Wishlist</h3></div>
        </a><a href="/wallet">
            <div class="wallet profile-section-option"><img src="/userProfileImages/wallet.png" alt=""> <h3>Wallet</h3></div>
        </a>
        </div>
    </div>
    <div class="all-details-profile" style="display: flex;justify-content: center;">


        <div class="addresses" style="    width: 60%; padding: 40px;
">

            <form action="" method="post">

                <label for="">Country</label>

                <select id="country" name="country" class="form-select">
                    <option value="<%= address.country %>" selected><%= address.country %></option>
                    <!-- Add options for countries -->
                </select>

                <label for="">State</label>

                <select id="state" name="state" class="form-select">
                    <option value="<%= address.state %>" selected><%= address.state %></option>
                    <!-- Options will be dynamically populated based on the selected country -->
                </select>
                
                <label for="">District</label>

                <select id="district" name="district" class="form-select">
                    <option value="<%= address.district %>" selected><%= address.district %></option>
                    <!-- Options will be dynamically populated based on the selected state -->
                </select>
                <br>
                <label for="">city</label>
                <input type="text" name="city" value="<%= address.city %>" id="" class="form-control">
                <label for="">street</label>
                <input type="text" name="street" value="<%= address.street %>" id="" class="form-control">
                <label for="">houseNo</label>
                <input type="text" name="houseNo"value="<%= address.houseNo %>" id="" class="form-control">
                <label for="">pincode</label>
                <input type="number" name="pincode"value="<%= address.pincode %>" id="" class="form-control">
                <br><br>
                <input type="submit" class="btn btn-success" value="submit Address">



            </form>


            <% if(typeof emessage !=='undefined' ) { %>
            
                <h2 style="font-weight: 500;font-size: 14px;color: rgb(192, 20, 20);
                ">
                    <%= emessage %>
                </h2>
                <% } %>
            
        </div>




        
    </div>
</div>



