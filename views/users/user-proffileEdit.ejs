            <div style="    width: 100%;
            display: flex;
            justify-content: center;">
        <form action="/editUser" id="uploadForm" method="post">
            <div class="pName in">
              <label for="">Username :</label>
              <input style="    padding: 12px 5px;
              width: 300px;
              margin: 8px;" type="text" name="name" value="<%= user.name %>">
              <input type="hidden" value="<%= user._id %>" name="id">
