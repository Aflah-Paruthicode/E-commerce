<%- include('../layouts/header.ejs') %>
<link rel="stylesheet" href="/css/userCss/userProffile.css" />
<link rel="stylesheet" href="/css/userCss/editProffile.css" />

<div class="profile-wrapper">
  <aside class="profile-sidebar">
    <div class="user-greeting">
      <img src="/userProfileImages/user (1).png" alt="User" />
      <div>
        <small class="text-muted">Hello,</small>
        <h2><%= user.name %></h2>
      </div>
    </div>

    <nav class="nav-menu">
      <a href="/profile" class="nav-item-link"> <i class="fa-solid fa-gauge"></i> Account Overview </a>
      <a href="/myOrders" class="nav-item-link active"> <i class="fa-solid fa-box"></i> My Orders </a>
      <a href="/manageAddress" class="nav-item-link"> <i class="fa-solid fa-map-location-dot"></i> Manage Addresses </a>
      <a href="/whishlist" class="nav-item-link"> <i class="fa-solid fa-heart"></i> My Wishlist </a>
      <a href="/wallet" class="nav-item-link"> <i class="fa-solid fa-wallet"></i> Wallet </a>
      <a href="/logout" class="nav-item-link text-danger"> <i class="fa-solid fa-right-from-bracket"></i> Logout </a>
    </nav>
  </aside>

  <main class="profile-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold m-0">Edit Profile</h3>
      <a href="/profile" class="btn btn-sm btn-outline-dark px-3"> <i class="fa-solid fa-arrow-left me-1"></i> Back </a>
    </div>

    <div class="form-card-premium p-0 overflow-hidden">
      <div style="height: 100px; background: #f8f9fa"></div>

      <div class="px-4 pb-5" style="margin-top: -50px">
        <form action="/editUser" id="uploadForm" method="post">
          <div class="text-center mb-5">
            <div class="position-relative d-inline-block">
              <img
                src="/userProfileImages/user (1).png"
                class="rounded-circle border border-4 border-white shadow-sm"
                width="120"
                height="120"
                style="background: white"
              />
              <span
                class="position-absolute bottom-0 end-0 bg-dark text-white rounded-circle d-flex align-items-center justify-content-center"
                style="width: 32px; height: 32px; border: 2px solid white"
              >
                <i class="fa-solid fa-camera" style="font-size: 12px"></i>
              </span>
            </div>
            <h5 class="mt-3 fw-bold mb-0" style="font-weight: 600"><%= user.name %></h5>
          </div>

          <div class="row g-4 justify-content-center">
            <div class="col-md-8">
              <input type="hidden" value="<%= user._id %>" name="id" />

              <div class="input-group-custom mb-4">
                <label><i class="fa-solid fa-user me-2"></i>Full Name</label>
                <input type="text" name="name" value="<%= user.name %>" class="form-control-custom" required />
              </div>

              <div class="input-group-custom mb-4">
                <label><i class="fa-solid fa-envelope me-2"></i>Email Address</label>
                <input type="email" name="email" value="<%= user.email %>" class="form-control-custom" required />
              </div>

              <div class="input-group-custom mb-4">
                <label><i class="fa-solid fa-phone me-2"></i>Mobile Number</label>
                <input type="number" name="mobile" value="<%= user.mobile %>" class="form-control-custom" required />
              </div>

              <div class="input-group-custom mb-5">
                <label><i class="fa-solid fa-location-dot me-2"></i>Primary Address (Linked)</label>
                <div class="d-flex gap-2">
                  <input type="text" name="address" value="<%= user.address %>" class="form-control-custom bg-light" readonly />
                  <a
                    href="/manageAddress"
                    class="btn btn-outline-dark d-flex align-items-center"
                    style="padding: 4px 8px; border: 1px solid black; border-radius: 8px"
                    >Change</a
                  >
                </div>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-dark btn-lg px-5 w-100 shadow-sm">Save Profile Changes</button>
                <p class="mt-3 text-muted small">Changes will reflect across all your orders.</p>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>
