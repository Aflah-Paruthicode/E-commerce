<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        
    <% if(typeof message !== 'undefined') { %>

    <script>
                Swal.fire({
                    title: 'Success!',
                    text: '<%= message %>',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
            if (result) {
                // Redirect to the href of the anchor tag if the user confirms
                window.location.href = '/profile';
            }
        })

    </script>
   <% } %>
