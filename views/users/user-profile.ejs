<body>


<!-- user profile starts here -->




<div class="profile-main">
    <div class="profile-sections">
        <div class="hello-name"><img width="50px" src="/userProfileImages/user (1).png" alt=""> <h2 style="    margin: 0;
            "><%=  uSER.name %> </h2> </div>
        <div class="profile-section-options">
            <a href="/profile">
            <div class="overview profile-section-option"><img src="/userProfileImages/user (1).png" alt=""> <h3>Account Overview</h3></div>
        </a><a href="/myOrders">
            <div class="my-orders profile-section-option"><img src="/userProfileImages/package.png" alt=""> <h3>My Orders</h3></div>
        </a><a href="/manageAddress">
            <div class="manage-address profile-section-option"><img src="/userProfileImages/location.png" alt=""> <h3>Manage Addressess</h3></div>
        </a><a href="/whishlist">
            <div class="my-wishlist profile-section-option"><img src="/userProfileImages/wishlist.png" alt=""> <h3>My Wishlist</h3></div>
        </a><a href="/wallet">
            <div class="wallet profile-section-option"><img src="/userProfileImages/wallet.png" alt=""> <h3>Wallet</h3></div>
        </a>
        </div>
    </div>
    <div class="all-details-profile">
        
        






        <div class="container d-flex justify-content-center align-items-center" style="        padding: 130px;">
             
            <div class="card" style="width: 415px;
            padding: 18px;">
        
             <div class="upper">
        
               
             </div>
        
             <div class="user text-center">
        
               <div class="profile">
        
                 <img src="/userProfileImages/user (1).png" class="rounded-circle" width="80">
                 
               </div>
        
             </div>
        
        
             <div class="mt-3 text-center">
        
               <h4 class="mb-0"><%=  uSER.name %></h4>
               <span class="text-muted d-block mb-2"><%=  uSER.email %></span>
        
               <a class="btn btn-primary btn-sm follow" href="/editUser/?<%=  uSER._id %>" >Edit Proffile</a>
        
        
               <div class="d-flex justify-content-between align-items-center mt-4 px-4">
        
                 <div class="stats">
                   <h6 class="mb-0">Ordered itmes</h6>
                   <span><%= ordersCount %></span>
        
                 </div>
        
        
                 <div class="stats">
                   <h6 class="mb-0">Wallet</h6>
                   <span><%= wallet.Money %></span>
        
                 </div>
        
        
                 <div class="stats">
                   <h6 class="mb-0">whish items</h6>
                   <span><%= wishCount %></span>
        
                 </div>
                 
               </div>
               
             </div>
              
            </div>
        
          </div>









        
    </div>

    
</div>













